<section class="section">
  <div class="container">


<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p><%= @post.created_at.strftime("%d %b. %Y") %></p>

<p>
  <strong>Content:</strong>

  <%= @post.content.html_safe %>
</p>

<% if @post.image.attached? %>
<!-- @post.image.present? will always return true, use attached? to check presence -->
  <p>
    <strong>Image:</strong>
    <br>
    <%= image_tag @post.image, class: "post-img" %>
  </p>
<% end %>

<% if current_user %>
<%= link_to 'Edit', edit_post_path(@post), class:"button is-link"%>
<%end%>
<%= link_to 'Back', posts_path, class:"button is-link" %>

</div>
</section>
