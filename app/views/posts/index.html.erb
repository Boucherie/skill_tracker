

<h1>Posts</h1>

<p id="notice"><%= notice %></p>

<h4>Export data</h4>

<%= link_to "CSV", posts_path(format: "csv")%>
<%= link_to "Excel", posts_path(format: "xls")%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%d %b. %Y") %></td>
        <td><%= post.content.truncate(250)%></td>
        <td><%= link_to 'More', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
